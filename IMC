peso = (input('Qual é o seu peso (kg)? '))
altura = float(input('Qual é a sua altura (m)? '))

imc = peso / (altura ** 2)

print(f'Seu IMC é {imc:.2f}')

if imc < 18.5:
    print("Abaixo do peso")
elif imc < 25:
    print("Peso ideal")
elif imc < 30:
    print("Sobrepeso")
else:
    print("Obesidade")