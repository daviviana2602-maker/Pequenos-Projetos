names = []
ages = []
sexs = []

while True:
    try:
        quantity = int(input('how many people do you want insert: '))
        for i in range(quantity):
            name = input(f'enter people {i + 1} name: ').title()
            age = int(input(f'enter age of the people: '))
            while age < 0:
                age = int(input(f'enter a valid age: '))
            sex = input(f'enter sex of the people (male or female): ').lower()
            while sex not in ('male' , 'female'):
                sex = input(f'enter a valid sex of the people (male or female): ')
                
            names.append(name)
            ages.append(age)
            sexs.append(sex)
    
        break
    except ValueError:
        print('enter the valid quantity')

for i in range(quantity):
    print(f'name is {names[i]}, age is {ages[i]} and sex is {sexs[i]}')